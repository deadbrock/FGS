{
  "name": "fgs-rh-system",
  "version": "1.0.0",
  "description": "Sistema de RH - FGS Formando Gente de Sucesso",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:network": "vite --host 0.0.0.0",
    "dev:backend": "node backend/server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "preview": "vite preview --port 3000 --host 0.0.0.0",
    "preview:network": "vite preview --host 0.0.0.0",
    "lint": "eslint src --ext ts,tsx",
    "predeploy": "npm run build",
    "deploy:check": "node scripts/pre-deploy-check.js",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/lab": "^7.0.1-beta.19",
    "@mui/material": "^5.14.20",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "framer-motion": "^12.23.24",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "notistack": "^3.0.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.7"
  }
}
